<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Add a Task</h3>
  <form action="/tasks/add" method="POST">

  <div>
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" placeholder="title" class="form-control rounded-0 bg-dark text-white" />
  </div>

  <div>
  <label for="description"></label>
  <textarea
    name="description"
    placeholder="description"
    id="description"
    class="form-control rounded-0 bg-dark text-white"
  ></textarea>
  </div>

  <button class="btn btn-primary btn-sm mt-2">Guardar</button>
</form>
</div>